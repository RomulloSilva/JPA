#CAMPOS OBRIGATÓRIOS PARA A CONEXÃO COM O BANCO DE DADOS.

#Definindo a rota
spring.datasource.url = jdbc:mysql://localhost:3306/sistemabiblioteca?serverTimezone=UTC&useTimezone=true
#Definindo o usuário.
spring.datasource.username = root
#Definindo a senha.
spring.datasource.password = admin
#Definindo o dialeto que o spring vai se comunicar com o banco de dados.
spring.jpa.properties.hibernate.dialect = org.hibernate.dialect.MySQL5Dialect

#CAMPOS OPCIONAIS.
#Mostra no console as instruções SQL geradas automaticamente.
spring.jpa.show_sql = true
#Teste que verifica se estamos conectados a base de dados.
spring.datasource.testWhileIdle = true
#função que é chamada na base para manter a conexão ativa.
spring.datasource.validationQuery = SELECT 1

#Cria tabelas na base se não houver nehuma ligada as classes existentes.
spring.jpa.hibernate.ddl-auto = update
